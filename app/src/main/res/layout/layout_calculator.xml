<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/hebrew_input"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="×"
        android:textDirection="rtl"
        android:textSize="60sp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toTopOf="@id/numerical_value"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/numerical_value"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="1"
        android:textSize="60sp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toTopOf="@id/keyboard_include"
        app:layout_constraintLeft_toLeftOf="parent" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/backspace"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:textSize="40sp"
        android:text="@string/back_arrow_unicode"
        app:layout_constraintTop_toBottomOf="@id/hebrew_input"
        app:layout_constraintRight_toRightOf="parent"/>

    <include
        android:id="@+id/keyboard_include"
        layout="@layout/dynamic_keyboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>